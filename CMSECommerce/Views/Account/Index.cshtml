@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                GrandTotal
            </th>
            <th>
                Date
            </th>
            <th>
                Shipped
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.GrandTotal.ToString("C2")
                </td>
                <td>
                    @item.DateTime
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipped)
                </td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
