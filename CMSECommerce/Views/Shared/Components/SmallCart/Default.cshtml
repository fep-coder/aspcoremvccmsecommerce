@model SmallCartViewModel

@if (Model != null)
{
    <p>Items in cart: <span class="badge rounded-pill text-bg-success">@Model.NumberOfItems</span></p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary mb-2">View Cart</a> <br />
    <a asp-controller="Cart" asp-action="Clear" class="btn btn-danger">Clear Cart</a>
}
else
{
    <p class="lead">Your cart is empty.</p>
}